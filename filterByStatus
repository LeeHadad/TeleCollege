#include <iostream>
#include <algorithm>
struct customer {
	char name[20];
	int age;
	int status;

};
int main()
{
	customer array [5];
	strcpy(array[0].name,"maor");
	array[0].age = 29;
	array[0].status = 1;
	strcpy(array[1].name, "Lee");
	array[1].age = 26;
	array[1].status = 1;
	strcpy(array[2].name, "Sivan");
	array[2].age = 25;
	array[2].status = 2;
	strcpy(array[3].name, "Liron");
	array[3].age = 23;
	array[3].status = 2;
	strcpy(array[4].name, "Limor");
	array[4].age = 24;
	array[4].status = 3;
	customer filtered_array[5];
	int count = 0;
	for (customer c : array) {
		if (c.status == 1){
			filtered_array[count] = c;
			count++;
		}
	}
	for (int i = 0; i < count;i++) {
		
		std::cout << filtered_array[i].name << std::endl;
	}
	system("pause");
    return 0;
}

